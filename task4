def count_occurrences(input_string, target_char):
    # Ініціалізація лічильника
    count = 0

    # Перебір кожного символу у рядку
    for char in input_string:
        # Перевірка, чи символ рівний введеному символу
        if char == target_char:
            count += 1

    return count

# Введення рядка та символу від користувача
input_string = input("Введіть рядок: ")
target_char = input("Введіть символ для підрахунку: ")

# Підрахунок кількості входжень символу у рядок
occurrences = count_occurrences(input_string, target_char)

# Виведення результату
print(f"Символ '{target_char}' входить у рядок {occurrences} разів.")
